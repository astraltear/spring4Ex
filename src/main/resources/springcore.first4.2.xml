<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	
	<bean id="student3" class="com.youngjee.springcore.first4.Student">
		<constructor-arg value="hong gil ja" />
		<constructor-arg value="8" />
		<constructor-arg>
			<list>
				<value>dancing</value>
				<value>piano</value>
			</list>
		</constructor-arg>

		<property name="height">
			<value>127</value>
		</property>

		<property name="weight" value="21" />
	</bean>

	<bean id="family" class="com.youngjee.springcore.first4.Family" c:papaName="hong father"
		c:mamiName="hong mother" p:sisterName="hong sister" p:brothername="hong brother" />

</beans>
